<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
       android:background="@drawable/allback">
  <RelativeLayout
        android:id="@+id/top_relative"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip" >
        <ImageView
            android:id="@+id/titleBg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="?mybackground" />
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="锁屏密码设置"
             android:textSize="?maintop"
          android:textColor="?toptextcolor" />
        <ImageView
            android:id="@+id/example_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back" />
    </RelativeLayout>

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentRight="true"
      android:layout_below="@+id/top_relative" >

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:orientation="vertical"
          android:layout_marginTop="20dp"
          android:background="@drawable/round_bg">

          <Button
              android:id="@+id/disable_btn"
              android:layout_width="match_parent"
              android:layout_height="50dp"
               android:background="@drawable/btn_style_my"
              android:text="开启密码" />
          <ImageView android:layout_width="match_parent"
              android:layout_height="1dp"
              android:src="@color/grey"/>
           <Button
              android:id="@+id/change_btn"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@drawable/btn_style_my"
              android:text="改变密码" />

      </LinearLayout>

  </RelativeLayout>

</RelativeLayout>
